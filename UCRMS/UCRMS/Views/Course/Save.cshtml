
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_SaveCourse.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Course
            <small>Save Course</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-----------------------------------------------------------------------------------Common &  Menu Section------------------------------------------------------------------------------->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- right column -->
            <div class="col-sm-offset-3 col-md-6">
                <!-- Horizontal Form -->
                <div class="box box-info box-form">
                    <div class="box-header with-border">
                        <h3 class="box-title">Save Course</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="POST" id="myForm1">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="DeptCode" class="col-sm-2 control-label">Code</label>
                                <div class="col-sm-10">
                                    <input type="Text" class="form-control" id="Code" name="Code" placeholder="xxxxxxx">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="DeptName" class="col-sm-2 control-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="DeptName" class="col-sm-2 control-label">Credit</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Credit" name="Credit" placeholder="Credit In Decimal Non Negetive Value">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="DeptName" class="col-sm-2 control-label">Description</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Description" name="Description" placeholder="Description">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="DeptName" class="col-sm-2 control-label">Department</label>
                                <div class="col-sm-10">
                                    <select class="form-control select2" id="DepartmentId" name="DepartmentId" style="width: 100%;">
                                        <option disabled selected>Select One</option>
                                        @foreach (var department in ViewBag.Departments)
                                        {
                                            <option value="@department.Id">@department.Name</option>
                                        }
                                    </select>
                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label for="DeptName" class="col-sm-2 control-label">Semester</label>
                                <div class="col-sm-10">
                                    <select class="form-control select2" id="SemesterId" name="SemesterId" style="width: 100%;">
                                        <option disabled selected>Select One</option>
                                        @foreach (var semester in ViewBag.Semesters)
                                        {
                                            <option value="@semester.Id">@semester.Name</option>
                                        }
                                    </select>
                                </div>
                            </div><!-- /.form-group -->
                            <div class="col-sm-2"></div>
                            <div class="col-sm-offset-2">

                                @if (ViewBag.Message != null)
                                {
                                    <div class="col-sm-offset-2 callout callout-success">
                                        <label type="text" id="Message">@ViewBag.Message</label>
                                    </div>
                                }
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <button type="reset" class="btn btn-default" onclick="funClear();">Cancel</button>
                            <button type="submit" class="btn btn-info pull-right">Save</button>
                        </div><!-- /.box-footer -->
                    </form>
                </div><!-- /.box -->
            </div><!--/.col (right) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->