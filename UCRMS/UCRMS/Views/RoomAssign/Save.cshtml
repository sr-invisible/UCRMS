@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_RoomAssign.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Start New Session
            <small>AllocateClassRooms</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-----------------------------------------------------------------------------------Common &  Menu Section------------------------------------------------------------------------------->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- right column -->
            <div class="col-sm-offset-3 col-md-6">
                <!-- Horizontal Form -->
                <div class="box box-info box-form">
                    <div class="box-header with-border">
                        <h3 class="box-title">Allocate Classrooms</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="POST" id="myForm1">
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Department</label>
                                <div class="col-sm-10">
                                    <select class="form-control select2" id="DepartmentId" name="DepartmentId" style="width: 100%;">
                                        <option disabled selected>Select One</option>
                                        @foreach (var department in ViewBag.Departments)
                                        {
                                            <option value="@department.Id">@department.Name</option>
                                        }
                                    </select>
                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Course Code: </label>
                                <div class="col-sm-10">
                                    <select class="form-control select2" id="CourseId" name="CourseId" style="width:100%;">
                                        <option disabled selected>Select One</option>
                                    </select>
                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Room No: </label>
                                <div class="col-sm-10">
                                    <select class="form-control select2" id="RoomId" name="RoomId" style="width:100%;">
                                        <option disabled selected>Select One</option>
                                    </select>
                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Day: </label>
                                <div class="col-sm-10">
                                    <select class="form-control select2" id="DayId" name="DayId" style="width: 100%;">
                                        <option disabled selected>Select One</option>
                                    </select>
                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Form</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="StartTime" name="StartTime">
                                </div>
                                <div class="col-sm-4">
                                    <label><input type="radio" name="FromAmPm" id="FromAM" value="AM" checked>AM</label>
                                    <label><input type="radio" name="FromAmPm" id="FromPM" value="PM">PM</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">To</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="EndTime" name="EndTime">
                                </div>
                                <div class="col-sm-4">
                                    <label><input type="radio" name="ToAmPm" id="ToAM" value="AM" checked>AM</label>
                                    <label><input type="radio" name="ToAmPm" id="ToPM" value="PM">PM</label>
                                </div>
                            </div>
                            <div class="col-sm-2"></div>
                            <div class="col-sm-offset-2">

                                @if (ViewBag.Message != null)
                                {
                                    <div class="col-sm-offset-2 callout callout-success">
                                        <label type="text" id="Message">@ViewBag.Message</label>
                                    </div>
                                }
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <button type="reset" class="btn btn-default" onclick="funClear()">Cancel</button>
                            <button type="submit" id="btn" class="btn btn-info pull-right">Save</button>
                        </div><!-- /.box-footer -->
                    </form>
                </div><!-- /.box -->
            </div><!--/.col (right) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
